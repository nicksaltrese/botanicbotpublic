topic: ~botanic_chat_form system repeat ()

t: CHAT_FORM_NAME (!$userInfo.name)
	$userInfo.response = ^"Please let me know your name"
	$userInfo.response

    a: (!~negation name {is} _*)
		$userInfo.name = '_0
		^reuse(CONTINUE_FORM_FILLING)

	a: (!~negation ~yes {,} {it} {is} _*)
		$userInfo.name = '_0
		^reuse(CONTINUE_FORM_FILLING)

	a: ({will} ~negation give)
		$userInfo.response = ^"For contacting, this information is mandatory, "
		$userInfo.response
		^reuse(CONTINUE_FORM_FILLING)

	a: (!~negation _*)
		$userInfo.name = '_0
		^reuse(CONTINUE_FORM_FILLING)

	a: () ^reuse(CONTINUE_FORM_FILLING)	

t: CHAT_FORM_EMAIL (!$userInfo.email)
	$userInfo.response = ^"Please tell me know your email address so I know how to get in touch with you."
	$userInfo.response

    a: (!~negation ~bb_email_id {is} _~email_url)
		$userInfo.email = '_0
		^reuse(CONTINUE_FORM_FILLING)

	a: (!~negation ~yes {,} {it} {is} _~email_url)
		$userInfo.email = '_0
		^reuse(CONTINUE_FORM_FILLING)	

    a: (!~negation ~bb_email_id {is} _*)
		$userInfo.email = '_0
		^reuse(CONTINUE_FORM_FILLING)

	a: (!~negation ~yes {,} {it} {is} _*)
		$userInfo.email = '_0
		^reuse(CONTINUE_FORM_FILLING)

	a: (!~negation _~email_url)
		$userInfo.email = '_0
		^reuse(CONTINUE_FORM_FILLING)

	a: ({will} ~negation give)
		$userInfo.response = ^"For contacting, this information is mandatory, "
		$userInfo.response
		^reuse(CONTINUE_FORM_FILLING)		

	a: (!~negation _*)
		$_userInput = '_0
		$_tmp = "@"
		if ( ^findtext($_userInput $_tmp 0 insensitive) ) {
			$_tmp = "."
			if ( ^findtext($_userInput $_tmp 0 insensitive) ) {
				$userInfo.email = $_userInput
			}
		}
		if(!$userInfo.email) {
			$userInfo.response = ^"For contacting, this information is mandatory, "
			$userInfo.response
		}
		^reuse(CONTINUE_FORM_FILLING)

	a: () ^reuse(CONTINUE_FORM_FILLING)

t: CHAT_FORM_SHORT_MESSAGE (!$userInfo.shortMessage)
	$userInfo.response = ^"Please enter a short message."
	$userInfo.response

	a: (_*)
		# $userInfo.shortMessage = ^original(_0)
		$userInfo.shortMessage = ^"%originalinput"
		^reuse(CONTINUE_FORM_FILLING)

t: CHAT_FORM_THANKS ()
	if($userInfo.name AND $userInfo.email)
	{
		$userInfo.sendEmail = true
		$userInfo.response = ^"Thanks, we will contact you."
		$userInfo.response
	}
	else { ^reuse(CONTINUE_FORM_FILLING) }

s: CONTINUE_FORM_FILLING (?)
	if(!$userInfo.name)
	{
		^reuse(CHAT_FORM_NAME)
	}
	else if(!$userInfo.email)
	{
		^reuse(CHAT_FORM_EMAIL)
	}
	else if(!$userInfo.shortMessage)
	{
		^reuse(CHAT_FORM_SHORT_MESSAGE)
	}
	else if($userInfo.name AND $userInfo.email)
	{
		^reuse(CHAT_FORM_THANKS)
	}

